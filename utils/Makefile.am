	chmod ugo+x $@

.pl :
	$(PERL) -c $<
	rm -f $@
	echo "#! " $(PERL)  > $@
	cat $< >> $@
	chmod ugo+x $@

.py:
	rm -f $@
	echo "#! " $(PYTHON) > $@
	echo "import sys" >> $@
	echo "sys.path.append(\"$(pythondir)\")" >> $@	
	cat $< >> $@
	chmod ugo+x $@

.awk :
	rm -f $@
	echo "#! $(AWK) -f"> $@
	cat $< >> $@
	chmod ugo+x $@
